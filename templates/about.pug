extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9
        //- Set name
        h1= name

        p.lead.text-light
          | Full Stack JavaScript Developer.

        .portfolio-bio
          //- Elevator pitch
          p= pitch
      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Skills

        ul
          //- Retrieve elements from array
          each skill in skills
            li= skill

        h6 Contact Info

        ul
          li= email

        a.button.expanded(href=`${github_link}`) Github
        a.button.expanded(href=`${linkedin_link}`) LinkedIn
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  